---
const baseUrl = import.meta.env.BASE_URL;
---

<header class="fixed top-0 z-50 w-full bg-black/20 backdrop-blur-lg">
  <div class="max-w-7xl mx-auto px-4 sm:px-6">
    <div class="flex justify-between items-center py-4 md:justify-start md:space-x-10">
      <!-- Logo/Home -->
      <div class="flex justify-start lg:w-0 lg:flex-1">
        <a href="#" class="text-white font-bold text-xl">LC</a>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button
          type="button"
          class="bg-black/20 inline-flex items-center justify-center p-2 rounded-md text-white hover:bg-black/30 focus:outline-none"
          aria-controls="mobile-menu"
          aria-expanded="false"
          id="menu-button"
        >
          <span class="sr-only">Abrir menú principal</span>
          <svg
            class="h-6 w-6"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            ></path>
          </svg>
        </button>
      </div>

      <!-- Desktop menu -->
      <nav class="hidden md:flex space-x-10">
        <a href="#inicio" class="text-white hover:text-purple-300 transition-colors">
          Inicio
        </a>
       <a href="#experiencia" class="text-white hover:text-purple-300 transition-colors">
          Experiencia
        </a>
        <a href="#formacion-educativa" class="text-white hover:text-purple-300 transition-colors">
          Formación
        </a>
        <a href="#proyectos" class="text-white hover:text-purple-300 transition-colors">
          Proyectos
        </a>
        <a href="#sobremi" class="text-white hover:text-purple-300 transition-colors">
          Sobre mí
        </a>
        <a href="#contacto" class="text-white hover:text-purple-300 transition-colors">
          Contacto
        </a>
      </nav>
    </div>
  </div>

  <!-- Mobile menu -->
  <div class="md:hidden hidden" id="mobile-menu">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-black/90 backdrop-blur-lg">
      <a
        href="#inicio"
        class="text-white block px-3 py-2 rounded-md hover:bg-purple-900/50 transition-colors"
      >
        Inicio
      </a>
      <a
        href="#experiencia"
        class="text-white block px-3 py-2 rounded-md hover:bg-purple-900/50 transition-colors"
      >
        Experiencia
      </a>
      <a
        href="#formacion-educativa"
        class="text-white block px-3 py-2 rounded-md hover:bg-purple-900/50 transition-colors"
      >
        Formación
      </a>
      <a
        href="#proyectos"
        class="text-white block px-3 py-2 rounded-md hover:bg-purple-900/50 transition-colors"
      >
        Proyectos
      </a>
      <a
        href="#sobremi"
        class="text-white block px-3 py-2 rounded-md hover:bg-purple-900/50 transition-colors"
      >
        Sobre mí
      </a>
      <a
        href="#contacto"
        class="text-white block px-3 py-2 rounded-md hover:bg-purple-900/50 transition-colors"
      >
        Contacto
      </a>
    </div>
  </div>
</header>

<script>
  const button = document.querySelector('#menu-button');
  const menu = document.querySelector('#mobile-menu');
  const menuLinks = menu?.querySelectorAll('a');

  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });

  menuLinks?.forEach((link) => {
    link.addEventListener('click', () => {
      menu?.classList.add('hidden');
    });
  });

  // Cerrar menú al hacer click fuera
  document.addEventListener('click', (event) => {
    const target = event.target as HTMLElement;
    if (!target.closest('#mobile-menu') && !target.closest('#menu-button')) {
      menu?.classList.add('hidden');
    }
  });
</script>