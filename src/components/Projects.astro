---
import HTML from "./icons/HTML.astro"
import JavaScript from "./icons/JavaScript.astro"
import CSS from "./icons/CSS.astro"
import Java from "./icons/JAVA.astro"
import REACT from "./icons/REACT.astro"

const TAGS = {
  HTML: {
    name: 'HTML',
    class: 'bg-orange-700 text-white',
    icon: HTML,
  },
  JavaScript: {
    name: 'JavaScript',
    class: 'bg-yellow-500 text-black',
    icon: JavaScript,
  },
  CSS: {
    name: 'CSS',
    class: 'bg-blue-500 text-white',
    icon: CSS,
  },
  JAVA: {
    name: 'Java',
    class: 'bg-red-700 text-white',
    icon: Java,
  },
  REACT: {
    name: 'REACT',
    class: 'bg-blue-700 text-white',
    icon: REACT,
  },
}

const PROYECTOS = [
{
    title: "Consulta Ubicación",
    description: "Sistema web para gestionar personas y sus ubicaciones utilizando Google Maps. Permite registrar, actualizar y eliminar personas, así como visualizar sus ubicaciones de forma individual o grupal en el mapa.",
    link: "https://github.com/liancasi/Ubicacion-Google-Map.git",
    image: "/images/projects/image_proyecto4.jpg",
    tags: [TAGS.HTML, TAGS.JavaScript, TAGS.CSS, TAGS.JAVA, TAGS.REACT]
  },
  {
    title: "Encriptador y Desencriptador de texto",
    description: "Creación de un encriptador y desencriptador de texto con parámetros definidos, permitiendo transformar y recuperar el mensaje original.",
    link: "https://github.com/liancasi/Challenge-One-Lizeth-Caro",
    image: "/images/projects/image_proyecto1.jpg",
    tags: [TAGS.HTML, TAGS.JavaScript, TAGS.CSS]
  },
  {
    title: "Literalura",
    description: "Literalura es una app para gestionar libros y autores, integrando búsqueda, agregación y almacenamiento en base de datos.",
    link: "https://github.com/liancasi/Challenge-Literalura",
    image: "/images/projects/image_proyecto2.jpg",
    tags: [TAGS.JAVA]
  },
  {
    title: "Convertidor de Moneda",
    description: "Este proyecto es un Conversor de Moneda desarrollado en Java que permite a los usuarios realizar conversiones entre diferentes monedas utilizando tasas de cambio en tiempo real.",
    link: "https://github.com/liancasi/Convertidor_Moneda.git",
    image: "/images/projects/image_proyecto3.jpg",
    tags: [TAGS.JAVA]
  }

]
---

<section class="w-full px-4 lg:px-8 mx-auto max-w-7xl">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
    {PROYECTOS.map(({ title, description, tags, image, link }) => (
      <article class="flex flex-col items-center text-center bg-white/10 rounded-xl p-8 shadow-lg transition-all duration-300 hover:scale-105 hover:bg-white/20">
        <header class="mb-8 w-full">
          <h3 class="text-2xl font-bold text-yellow-200">{title}</h3>
        </header>
        
        <div class="mb-8 w-full">
          <img
            class="w-full rounded-lg shadow-2xl shadow-white/80"
            src={image}
            alt={`Imagen del proyecto ${title}`}
          />
        </div>
        
        <p class="text-base mb-8 text-pretty">{description}</p>
        
        <ul class="flex flex-wrap justify-center gap-3 mb-8">
          {tags.map((tag) => (
            <li class={`flex items-center gap-2 ${tag.class} rounded-full text-sm py-2 px-4`}>
              <tag.icon class="size-5" />
              {tag.name}
            </li>
          ))}
        </ul>
        
        <a
          href={link}
          class="inline-block bg-white text-black py-3 px-8 rounded-full hover:bg-gray-200 transition-colors font-semibold text-base"
          target="_blank"
          rel="noopener noreferrer"
        >
          Ver proyecto
        </a>
      </article>
    ))}
  </div>
</section>