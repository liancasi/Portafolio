---
import HTML from "./icons/HTML.astro"
import Angular from "./icons/Angular.astro"
import Python from "./icons/Python.astro"
import Tailwind from "./icons/Tailwind.astro"
import TypeScript from "./icons/TypeScript.astro"

const baseUrl = import.meta.env.BASE_URL;

const TAGS = {
  HTML: {
    name: 'HTML',
    class: 'bg-orange-700 text-white',
    icon: HTML,
  },
  TypeScript: {
    name: 'TypeScript',
    class: 'bg-yellow-500 text-black',
    icon: TypeScript,
  },
  Tailwind: {
    name: 'Tailwind',
    class: 'bg-blue-500 text-white',
    icon: Tailwind,
  },
  Python: {
    name: 'Python',
    class: 'bg-red-700 text-white',
    icon: Python,
  },
  Angular: {
    name: 'Angular',
    class: 'bg-blue-700 text-white',
    icon: Angular,
  },
}

const EXPERIENCIA = [
  {
 empresa: "AISIngenieria",
    cargo: "Desarrolladora Full Stack",
    periodo: "3/Febrero/2025 - Actualmente",
    descripcion: "Desarrollo y mantenimiento de aplicaciones web full stack utilizando tecnolog√≠as modernas.",
    tags: [TAGS.HTML, TAGS.TypeScript, TAGS.Tailwind, TAGS.Python, TAGS.Angular, ]
  }
]
---

<section class="w-full px-4 lg:px-8 mx-auto max-w-7xl">

  
  <div class="grid grid-cols-1 gap-8">
    {EXPERIENCIA.map(({ empresa, cargo, periodo, descripcion, tags }) => (
      <article class="bg-white/10 rounded-xl p-8 shadow-lg transition-all duration-300 hover:scale-[1.02] hover:bg-white/20">
        <header class="mb-6">
          <h3 class="text-2xl font-bold text-white">{empresa}</h3>
          <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mt-2">
            <p class="text-lg text-yellow-200">{cargo}</p>
            <p class="text-sm text-white/80">{periodo}</p>
          </div>
        </header>
        
        <p class="text-base mb-6 text-pretty">{descripcion}</p>
        
        <ul class="flex flex-wrap gap-3 mb-6">
          {tags.map((tag) => (
            <li class={`flex items-center gap-2 ${tag.class} rounded-full text-xs py-1 px-2`}>
              <tag.icon class="size-4" />
              {tag.name}
            </li>
          ))}
        </ul>
      </article>
    ))}
  </div>
</section>