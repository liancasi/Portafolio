---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import SocialPill from "../components/SocialPill.astro";
import LinkedIn from "../components/icons/LinkedIn.astro";
import GitHubIcon from "../components/icons/GitHub.astro";
import Books from "../components/icons/Books.astro";
import Code from "../components/icons/Code.astro";
import Education from "../components/Education.astro";
import Projects from "../components/Projects.astro";
import Sobremi from "../components/Sobremi.astro";
import Aboutme from "../components/icons/Aboutme.astro";
import Contacto from "../components/Contacto.astro";
import Telefono from "../components/icons/Telefono.astro";
import Experiencia from "../components/Experiencia.astro";

const baseUrl = import.meta.env.BASE_URL;
---

<Layout
  title="Portafolio de Lizeth Caro - Desarrolladora y Programadora Web"
  description="Trabajo de Lizeth Caro en desarrollo web y programación, enfocado en soluciones digitales innovadoras."
>
  <main class="px-4 sm:px-6 lg:px-8">
    <section
      id="inicio"
      class="min-h-screen flex flex-col justify-center max-w-4xl mx-auto py-12 sm:py-16 lg:py-20"
    >
      <div class="flex flex-col md:flex-row items-center gap-8 md:gap-12">
        <img
          class="rounded-full w-48 h-48 md:w-64 md:h-64 object-cover border-4 border-purple-500/20"
          src={`${baseUrl}/images/FOTOLIZETH_FONDO_GRIS.jpg`}
          alt="Lizeth Caro"
        />

        <div class="text-center md:text-left">
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-6 tracking-tight">
            Lizeth Caro
            <a
              href={`${baseUrl}/documents/hoja de vida_Lizeth Caro.pdf`}
              class="inline-block p-3"
              download
              target="_blank"
              rel="noopener"
            >
              <Badge> Descargar Currículum </Badge>
            </a>
          </h1>
          
          <h2 class="text-xl sm:text-2xl text-purple-200/90 mb-6">
            Desarrolladora Web | Estudiante de Ingeniería de Sistemas
          </h2>

          <p class="text-lg text-gray-300 mb-8 max-w-xl">
            Apasionada por la tecnología y el desarrollo de soluciones digitales
            innovadoras. Especializada en la creación de aplicaciones web
            interactivas y funcionales.
          </p>

          <nav class="flex flex-wrap justify-center md:justify-start gap-4">
            <SocialPill href="https://www.linkedin.com/in/liancasi/">
              <LinkedIn class="size-6" />
              LinkedIn
            </SocialPill>

            <SocialPill href="https://github.com/liancasi">
              <GitHubIcon class="size-6" />
              GitHub
            </SocialPill>
          </nav>
        </div>
      </div>
    </section>
  <section
      id="experiencia"
      class="max-w-4xl mx-auto py-16 sm:py-24"
    >
      <h2 class="text-2xl sm:text-3xl font-semibold mb-8 flex items-center justify-center gap-x-3">
        <Books class="size-8" />
        Experiencia
      </h2>
      <Experiencia />
    </section>

    <section
      id="formacion-educativa"
      class="max-w-4xl mx-auto py-16 sm:py-24"
    >
      <h2 class="text-2xl sm:text-3xl font-semibold mb-8 flex items-center justify-center gap-x-3">
        <Books class="size-8" />
        Formación Educativa
      </h2>
      <Education />
    </section>

    <section
      id="proyectos"
      class="max-w-6xl mx-auto py-16 sm:py-24"
    >
      <h2 class="text-2xl sm:text-3xl font-semibold mb-8 flex items-center justify-center gap-x-3">
        <Code class="size-8" />
        Proyectos
      </h2>
      <Projects />
    </section>

    <section
      id="sobremi"
      class="max-w-4xl mx-auto py-16 sm:py-24"
    >
      <h2 class="text-2xl sm:text-3xl font-semibold mb-8 flex items-center justify-center gap-x-3">
        <Aboutme class="size-8" />
        Sobre Mí
      </h2>
      <Sobremi />
    </section>

    <section
      id="contacto"
      class="max-w-4xl mx-auto py-16 sm:py-24"
    >
      <h2 class="text-2xl sm:text-3xl font-semibold mb-8 flex items-center justify-center gap-x-3">
        <Telefono class="size-8" />
        Contacto
      </h2>
      <Contacto />
    </section>
  </main>
</Layout>